@model Blog.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h2 class="text-center mt-4">Create New Department</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="DepName" class="font-weight-bold"></label>
                            <input asp-for="DepName" class="form-control" placeholder="Enter Department Name" />
                            <span asp-validation-for="DepName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreateDate" class="font-weight-bold"></label>
                            <input asp-for="CreateDate" class="form-control" type="date" />
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
