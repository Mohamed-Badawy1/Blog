@model IEnumerable<Blog.Models.Author>

@{
    ViewData["Title"] = "Authors List";
}

<h2 class="text-center mt-4">Authors Directory</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover shadow">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Department</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.ID</td>
                            <td>@author.Name</td>
                            <td>@author.BirthDate.ToString("dd/MM/yyyy")</td>
                            <td>@author.Gender</td>
                            <td>@author.Salary</td>
                            <td>@author.Department?.DepName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@author.ID" class="btn btn-sm btn-warning mx-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@author.ID" class="btn btn-sm btn-danger mx-1">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-success">Add New Author</a>
        </div>
        <div class="col-md-6 text-right">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
