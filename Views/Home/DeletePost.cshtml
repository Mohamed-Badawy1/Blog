@model Blog.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container my-5">
    <h2 class="text-center text-danger">Delete Post</h2>
    <div class="alert alert-warning text-center" role="alert">
        <h4>Are you sure you want to delete this post?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card my-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-right font-weight-bold">Author:</dt>
                <dd class="col-sm-9">@Model.Author?.Name</dd>

                <dt class="col-sm-3 text-right font-weight-bold">Post Type:</dt>
                <dd class="col-sm-9">@Model.PostType</dd>

                <dt class="col-sm-3 text-right font-weight-bold">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 text-right font-weight-bold">Created at:</dt>
                <dd class="col-sm-9">@Model.CreateDate.ToString("MMMM dd, yyyy hh:mm tt")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeletePost" method="post" class="text-center">
        <input type="hidden" name="id" value="@Model.ID" />
        <button type="submit" class="btn btn-danger btn-lg mr-3">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>

<style>
    .container {
        background-color: #f9f9f9;
        border-radius: 12px;
        padding: 30px 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }
    .card {
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h2.text-danger {
        color: #dc3545;
    }
    .alert-warning {
        border: 1px solid #ffecb5;
        border-radius: 12px;
    }
    dl.row {
        margin-bottom: 0;
    }
    dt {
        color: #007bff; 
    }
    .btn-lg {
        border-radius: 8px; 
    }
</style>
